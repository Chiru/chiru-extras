import serial
import numpy as np
from time import sleep

port = "/dev/rfcomm0"
ser = serial.Serial(port, baudrate=9600, timeout=10)
print "connecting..."
sleep(2)
ser.write("echo on"+"\r\n")      # write a string
#ser.write("echo on"+"\r\n")      # write a string
ser.write("hello"+"\r\n")
ser.write("sett 114500000"+"\r\n")
ser.write("ags +000005000 100 1 0"+"\r\n")
print ser.portstr

def pitch(x,y,z,)
    p = np.atan(x/(np.sqrt((y**2)+(z**2)))
    return p

def roll(x,y,z)
    r = np.atan(y/(np.sqrt((x**2)+(z**2)))
    return r

while True:
    vector=[]
    #print "Got here"
    data = ser.readline()
    #print "Read line"
    data = data.split(",")
    for i in data:
    	i=i.rstrip("\r\n")
	vector.append(i)
    if len(vector) > 3:
	line = vector[-3:]
	iline = [int(n) for n in line]
	x=line[0]
	y=line[1]
	z=line[2]
        #print vector[-6:]
	#output.writerow(line)
   	#result=knndir.knnestimate(knndir.data,iline)
	pt = pitch(x,y,z)
	rl = roll(x,y,z)
	print 'Pitch: ',pt
	print 'Roll: ',rl
    #sleep(0.5)
    #print 'not blocked'

print "Stopping sensor output"
ser.write("stop all"+"\r\n")
print "Closing serial port" 
ser.close()
